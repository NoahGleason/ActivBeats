<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/root_layout">

    <TextView
        android:id="@+id/textView"
        android:layout_width="173dp"
        android:layout_height="18dp"
        android:layout_alignBottom="@+id/recyclerView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="328dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="345dp"
        android:layout_marginBottom="52dp"
        android:text="@string/sisy_s_amazing_song_uwu" />

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recyclerView"
            android:layout_height="100dp"/>

    <Button
        android:id="@+id/connectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/scanDevices"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="@string/connect"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/disconnectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/connectButton"
        android:background="@color/colorAccent"
        android:padding="8dp"
        android:text="@string/disconnect"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/scanDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp"
        android:text="@string/scan_devices"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/goButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/disconnectButton"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp"
        android:text="@string/go"
        android:textColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="invisible"
        android:id="@+id/tracksContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_marginTop="-590dp"
                android:id="@+id/cursorWrapper">
                <ImageView
                    android:id="@+id/testImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:src="@drawable/newredline"
                    android:adjustViewBounds="true"
                    android:visibility="invisible"></ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="300px"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:text="Song"></TextView>
                </RelativeLayout>
                <ImageButton
                    android:id="@+id/otrTrack"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/oldtownroad"
                    android:visibility="invisible"
                    android:background="#000000"
                    android:paddingBottom="1dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="0dp"></ImageButton>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:orientation="horizontal"
                android:id="@+id/hihatLayout">

                <RelativeLayout
                    android:layout_width="300px"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:text="Hi Hat"></TextView>
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/emptyTrack1"
                    android:layout_width="fill_parent"
                    android:layout_height="118dp"
                    android:layout_margin="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/empty"
                    android:visibility="invisible"
                    android:background="#000000"
                    android:paddingBottom="1dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="0dp"></ImageButton>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:orientation="horizontal"
                android:id="@+id/snareLayout">

                <RelativeLayout
                    android:layout_width="300px"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:text="Snare Drum"></TextView>
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/emptyTrack2"
                    android:layout_width="fill_parent"
                    android:layout_height="118dp"
                    android:layout_margin="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/empty"
                    android:visibility="invisible"
                    android:background="#000000"
                    android:paddingBottom="1dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="0dp"></ImageButton>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:orientation="horizontal"
                android:id="@+id/kickLayout">

                <RelativeLayout
                    android:layout_width="300px"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:text="Kick"></TextView>
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/emptyTrack3"
                    android:layout_width="fill_parent"
                    android:layout_height="118dp"
                    android:layout_margin="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/empty"
                    android:visibility="invisible"
                    android:background="#000000"
                    android:paddingBottom="1dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="0dp"></ImageButton>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:orientation="horizontal"
                android:id="@+id/tomtomLayout">

                <RelativeLayout
                    android:layout_width="300px"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:text="Tom Tom"></TextView>
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/emptyTrack4"
                    android:layout_width="fill_parent"
                    android:layout_height="118dp"
                    android:layout_margin="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/empty"
                    android:visibility="invisible"
                    android:background="#000000"
                    android:paddingBottom="1dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="0dp"></ImageButton>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/startCursor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp"
        android:text="@string/play_music"
        android:textColor="@android:color/white"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/exportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/export"
        android:textColor="@android:color/white"
        android:visibility="invisible"
        android:layout_toRightOf="@id/startCursor"/>

    <Button
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/share"
        android:textColor="@android:color/white"
        android:visibility="invisible"
        android:layout_toRightOf="@id/exportButton"/>

    <TextView
        android:id="@+id/currentbeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/current_beat"
        android:textSize="20sp"
        android:visibility="invisible"
        android:layout_toRightOf="@+id/shareButton"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/beattype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/start_beat"
        android:textSize="20sp"
        android:visibility="invisible"
        android:layout_toRightOf="@+id/currentbeat"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/back"
        android:textColor="@android:color/white"
        android:visibility="invisible"
        android:layout_alignParentRight="true"/>
</RelativeLayout>