<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="173dp"
        android:layout_height="18dp"
        android:layout_alignBottom="@+id/recyclerView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="328dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="345dp"
        android:layout_marginBottom="52dp"
        android:text="Sisy's Amazing Song UwU" />

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recyclerView"
            android:layout_height="100dp"/>

    <TextView
        android:id="@+id/pressureChangedTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <TextView
            android:background="@color/colorPrimary"
            android:id="@+id/pressureChangedTextView2"
            android:textColor="@android:color/white"
            android:layout_margin="8dp"
            android:layout_toEndOf="@id/pressureChangedTextView1"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_below="@id/recyclerView"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

    <Button
        android:id="@+id/connectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/scanDevices"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:text="@string/connect"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/disconnectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/connectButton"
        android:background="@color/colorAccent"
        android:padding="8dp"
        android:text="@string/disconnect"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/startIsometricButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/disconnectButton"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp"
        android:text="@string/start_isometric"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/scanDevices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp"
        android:text="@string/scan_devices"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/goButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/startIsometricButton"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp"
        android:text="Go"
        android:textColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:visibility="invisible"
        android:id="@+id/tracksContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/testImage"
                android:layout_width="20dp"
                android:layout_height="590dp"
                android:padding="0dp"
                android:layout_marginTop="-590dp"
                android:src="@drawable/redline"
                android:adjustViewBounds="true"
                android:visibility="invisible"></ImageView>

            <ImageButton
                android:id="@+id/otrTrack"
                android:layout_width="fill_parent"
                android:layout_height="118dp"
                android:layout_margin="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/oldtownroad"
                android:visibility="invisible"
                android:background="#000000"
                android:paddingBottom="1dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingTop="0dp"></ImageButton>

            <ImageButton
                android:id="@+id/emptyTrack1"
                android:layout_width="fill_parent"
                android:layout_height="118dp"
                android:layout_margin="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/empty"
                android:visibility="invisible"
                android:background="#000000"
                android:paddingBottom="1dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingTop="0dp"></ImageButton>

            <ImageButton
                android:id="@+id/emptyTrack2"
                android:layout_width="fill_parent"
                android:layout_height="118dp"
                android:layout_margin="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/empty"
                android:visibility="invisible"
                android:background="#000000"
                android:paddingBottom="1dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingTop="0dp"></ImageButton>

            <ImageButton
                android:id="@+id/emptyTrack3"
                android:layout_width="fill_parent"
                android:layout_height="118dp"
                android:layout_margin="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/empty"
                android:visibility="invisible"
                android:background="#000000"
                android:paddingBottom="1dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingTop="0dp"></ImageButton>

            <ImageButton
                android:id="@+id/emptyTrack4"
                android:layout_width="fill_parent"
                android:layout_height="118dp"
                android:layout_margin="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/empty"
                android:visibility="invisible"
                android:background="#000000"
                android:paddingBottom="1dp"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:paddingTop="0dp"></ImageButton>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/startCursor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp"
        android:text="Play Music"
        android:textColor="@android:color/white"
        android:visibility="invisible"/>


</RelativeLayout>